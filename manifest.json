{
  "manifest_version": 3,
  "name": "Time Tracker",
  "version": "1.0",
  "description": "Track your activities every 15 minutes",
  
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "tabs"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Log your activity"
  },
  
  "background": {
    "service_worker": "background.js"
  }
}